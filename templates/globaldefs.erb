  <%- end -%>
  <%- if @enable_snmp_rfc -%>
  enable_snmp_rfc
  <%- end -%>
  <%- if @enable_snmp_rfcv2 -%>
  enable_snmp_rfcv2
  <%- end -%>
  <%- if @enable_snmp_rfcv3 -%>
  enable_snmp_rfcv3
  <%- end -%>
  <%- if @enable_traps -%>
  enable_traps
  <%- end -%>
  <%- if @vrrp_higher_prio_send_advert -%>
  vrrp_higher_prio_send_advert <%= @vrrp_higher_prio_send_advert %>
